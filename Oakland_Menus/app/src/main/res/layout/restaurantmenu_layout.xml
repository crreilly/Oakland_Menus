<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:title="@string/action_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/appbackground"



    >

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Chick"
        android:background="@drawable/chick"
        android:onClick="buttonOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Panda"
        android:layout_alignStart="@+id/Panda" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/Subway"
        android:background="@drawable/subway_logo"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/Chick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Panda"
        android:background="@drawable/pandaexpress"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/Subway"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />


</RelativeLayout>