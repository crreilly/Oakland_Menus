<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:title="@string/action_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/appbackground"
    >

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/starbucks_logo"
        android:background="@drawable/starbucks_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/einstein"
        android:background="@drawable/einstein_logo"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/starbucks_logo"
        android:layout_alignLeft="@+id/starbucks_logo"
        android:layout_alignStart="@+id/starbucks_logo"
        android:layout_marginTop="58dp" />

    <ImageButton
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:id="@+id/CafeOBears"
         android:background="@drawable/cafeobears"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/einstein"
        android:layout_alignLeft="@+id/einstein"
        android:layout_alignStart="@+id/einstein"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cafe O Bears"
        android:id="@+id/textView8"
        android:layout_below="@+id/CafeOBears"
        android:layout_centerHorizontal="true" />


</RelativeLayout>