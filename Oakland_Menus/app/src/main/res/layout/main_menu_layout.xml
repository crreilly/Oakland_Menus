<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:title="@string/action_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ougrizzlogo"
    >

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/restaurants"
        android:background="@drawable/restaurant_icon"
        android:onClick="buttonOnClick"
        android:contentDescription="@string/restaurants"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/Coffee"
        android:background="@drawable/coffee_image"
        android:onClick="buttonOnClick"
        android:contentDescription="@string/Coffee"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Rating"
        android:layout_alignStart="@+id/Rating" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Map"
        android:background="@drawable/map_icon"
        android:onClick="buttonOnClick"
        android:contentDescription="@string/Maps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/Rating"
        android:background="@drawable/black_star_logo"
        android:onClick="buttonOnClick"
        android:layout_alignTop="@+id/Map"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="    Restaurants"
        android:id="@+id/textView4"
        android:layout_below="@+id/restaurants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   Coffee Shops"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/Coffee"
        android:layout_alignStart="@+id/Coffee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Locations"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/Map"
        android:layout_alignRight="@+id/restaurants"
        android:layout_alignEnd="@+id/restaurants" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="         Ratings"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Rating"
        android:layout_alignStart="@+id/Rating" />

</RelativeLayout>