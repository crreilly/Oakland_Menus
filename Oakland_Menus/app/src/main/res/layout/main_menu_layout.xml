<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:title="@string/action_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#9A844A"



    >

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/restaurants"
        android:background="@drawable/restaurant_icon"
        android:contentDescription="@string/restaurants"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Map"
        android:layout_toEndOf="@+id/Map" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Coffee"
        android:background="@drawable/coffee_image"
        android:contentDescription="@string/Coffee"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Map"
        android:layout_toEndOf="@+id/Map" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Map"
        android:background="@drawable/map_icon"
        android:contentDescription="@string/Maps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="29dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Rating"
        android:background="@drawable/black_star_logo"
        android:layout_alignTop="@+id/Map"
        android:layout_toRightOf="@+id/Coffee"
        android:layout_toEndOf="@+id/Coffee" />

</RelativeLayout>